<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlpj.www.angelhack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SelectAddTypeActivity" />
        <activity android:name=".JobAddActivity" />
        <activity android:name=".ServiceAddActivity" />
        <activity android:name=".CheckJobsActivity" />
        <activity android:name=".CheckWorkersActivity" />
        <activity android:name=".DisplayWorkerDetailAcivity" />
        <activity android:name=".DisplayActivity"></activity>
    </application>

</manifest>